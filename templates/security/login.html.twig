{% extends 'base.html.twig' %}

{% block title %}Login Controller!
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Login</h1>
        <br>
        <form class="form-signin" action="{{ path('security.login') }}" method="post">
            <div class="form-group">
                <label class="sr-only" for="username">Your username</label>
                <input autofocus class="form-control" id="username" name="_username" placeholder="Doe" required type="text">
            </div>
            <div class="form-group">
                <label class="sr-only" for="password">Password</label>
                <input class="form-control" id="inputPassword" name="_password" placeholder="Password" required type="password">
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
    </div>
{% endblock %}
