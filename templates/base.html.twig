{# templates/base.html.twig #}
<!DOCTYPE html>
<html>

    <head>
        <!--    Required meta tags  -->
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>
        <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>

    <body>
        <header>
            {{ include('include/navbar.html.twig') }}
        </header>

        {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center">
            {{ message }}
        </div>
        {% endfor %}

        {% block body %}{% endblock %}

        <hr>
        <footer class="d-flex flex-column flex-md-column text-center">
            <ul class="list-inline">
                <li class="list-inline-item">
                    <a href="{{ path('find_us') }}">Visit us</a>
                </li>
                <li class="list-inline-item">
                    <a href="#">Terms &amp; Condition</a>
                </li>
                <li class="list-inline-item">
                    <a href="#">privacy policy</a>
                </li>
                <li class="list-inline-item">
                    <a href="{{ path('contact') }}">Contact us !</a>
                </li>
            </ul>
            <p><br>&copy;
                {{ 'now'|date('Y') }}
                - Tous droits réservés - Mon Joli Village</p>
        </footer>

        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </body>

</html>