{# templates/base.html.twig #}
<!DOCTYPE html>
<html>

    <head>
        <!--    Required meta tags  -->
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>
        <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>

    <body>
        <!-- header area start   -->
        <header>
            <div>
                <img src="{{ asset('build/assets/images/home/Saint-Hilaire-du-Harcouet-sm.jpg') }}"
                    alt="image du village">
            </div>
        </header>
        <!-- ./header area start   -->

        <!-- navbar area start-->
        {{ include('include/navbar.html.twig') }}
        <!-- ./navbar area start-->


        <main>
            {% block body %}{% endblock %}
        </main>
        <hr>
        {% block footer %}
        <!-- footer area start -->
        {{ include('include/footer.html.twig') }}
        <!-- ./footer area start -->
        {% endblock %}

        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% endblock %}
        
    </body>

</html>