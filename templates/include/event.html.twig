<div class="col-md-6 mb-3">
    <div class="card shadow-sm">
        <div class="card-body">
            <h6 class="card-title text-center">from
                <b>
                    {{ event.dateDebutEvent|localizeddate('long', 'short') }}</b>
                to
                <b>
                    {{ event.dateFinEvent|localizeddate('long', 'short') }}</b>
            </h6>
            <hr>
            <h2>{{ event.titre }}</h2>
            <p class="card-text">{{ event.description }}</p>
            <p>
                <a class="btn btn-secondary" href="{{ path('events.show', {id: event.idEvent, slug: event.slug }) }}" role="button">See details &raquo;</a>
            </p>
        </div>
    </div>
</div>
