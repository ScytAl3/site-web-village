<div class="col-md-6 mb-3">
    <div class="card shadow-sm">
        <!--    AJOUT IMAGE ASSOCIEE A L EVENEMENT  -->
        {% if event.imageName %}
        <img src="{{ vich_uploader_asset(event, 'imageFile') | imagine_filter('thumb') }}" alt="image de l'événement"
            class="card-img-top" style="width: 100%; height:auto" />
        {% endif %}
        <div class="card-body">
            <h6 class="card-title text-center">from
                <b>
                    {{ event.startDateEvent|localizeddate('long', 'short') }}</b>
                to
                <b>
                    {{ event.endDateEvent|localizeddate('long', 'short') }}</b>
            </h6>
            <hr>
            <h2>{{ event.title }}</h2>
            <p class="card-text">{{ event.description }}</p>
            <p>
                <a class="btn btn-secondary" href="{{ path('events.show', {id: event.idEvent, slug: event.slug }) }}"
                    role="button">See details &raquo;</a>
            </p>
        </div>
    </div>
</div>