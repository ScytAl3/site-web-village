{% extends 'base.html.twig' %}

{% block title %}Détail d'un événement
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-7"></divclass="col-md-5">
            <h1 class="text-center">{{ monEvenement.getTitre}}</h1>
            <h6 class="card-title text-center">Du
                <b>
                    {{ monEvenement.dateDebutEvent|localizeddate('long', 'short') }}</b>
                au
                <b>
                    {{ monEvenement.dateFinEvent|localizeddate('long', 'short') }}</b>
            </h6>
            <h3>{{ monEvenement.corps }}</h3>
        </div>
    </div>

{% endblock %}
