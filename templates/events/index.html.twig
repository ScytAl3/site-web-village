{% extends 'base.html.twig' %}

{% block title %}EventController!
{% endblock %}

{% block body %}

    <div class="container mt-4">
        <h1 class="text-center">Calendar of all events</h1>
        <br>
        <hr>
        <!-- Affichage de tous les evenements -->
        <div class="row flex">
            {% if theEvents %}
                {% for event in theEvents %}
                    <div class="col-md-6">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title text-center">Du
                                    <b>
                                        {{ event.dateDebutEvent|localizeddate('long', 'short') }}</b>
                                    au
                                    <b>
                                        {{ event.dateFinEvent|localizeddate('long', 'short') }}</b>
                                </h6>
                                <hr>
                                <h2>{{ event.titre }}</h2>
                                <p class="card-text">{{ event.description }}</p>
                                <p>
                                    <a class="btn btn-secondary" href="{{ path('events.show', {id: event.idEvent, slug: event.slug }) }}" role="button">See details &raquo;</a>
                                </p>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            {% else %}
                <p>There are no events to display !</p>
            {% endif %}

        </div>
    </div>
    <!-- /container -->
{% endblock %}
