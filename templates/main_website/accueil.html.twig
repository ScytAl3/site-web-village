<!-- section -->
<section class="py-5">
    <div class="row justify-content-center">

        <!-- menu tabs pour selectionner les evenements en cours ou a venir -->
        <div class="col-sm-8 pl-5">
            <h1 class="text-center">Calendar of current and upcoming events</h1>
            <br>

            <!-- tabs -->
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#current">Current events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#toCome">Events to come</a>
                </li>
            </ul>
            <!-- ./tabs -->

            <!-- zone pour afficher les evenements -->
            <div id="myTabContent" class="tab-content">

                <!-- affichage des evenements en cours -->
                <div class="tab-pane fade active show" id="current">
                    <div class="row">
                        {% if currentEvent %}
                        {% for event in currentEvent %}
                        {{ include('include/event.html.twig') }}
                        {% endfor %}
                        {% else %}
                        <p>There are no events to display !</p>
                        {% endif %}
                    </div>
                </div>
                <!-- ./affichage des evenements en cours -->

                <!-- affichage des evenements a venir -->
                <div class="tab-pane fade" id="toCome">
                    <div class="row">
                        {% if nextEvent %}
                        {% for event in nextEvent %}
                        {{ include('include/event.html.twig') }}
                        {% endfor %}
                        {% else %}
                        <p>There are no events to display !</p>
                        {% endif %}
                    </div>
                </div>
                <!-- ./affichage des evenements a venir -->

            </div>
            <!-- ./zone pour afficher les evenements -->

        </div>
        <!-- ./menu tabs pour afficher les evenements en cours & a venir -->

